#!/bin/sh

usg() {
    cat <<EOF
usage: configure [OPTION]

Options:

  --bin-prefix <prefix>      set tools installation prefix;
  	   		     default: ${HOME}/bin
  --help                     print help message

EOF
    exit 1
}

dump() {
    cat <<EOF
BIN_PREFIX=$prefix
EXE_PREFIX=$P
EOF
}

P=udx
prefix=${HOME}/bin

while test $# -gt 0; do
    case "$1" in
	--bin-prefix)
	    shift
	    prefix="$1"
	    ;;
	--help)
	    usg
	    ;;
	*)
	    usg
	    ;;
    esac
    shift
done

dump > config

exit 0
