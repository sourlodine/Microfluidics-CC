<?xml version="1.0"?>
<simulation name="poiseuille" mpi_ranks="1 1 1" debug_lvl="5" noplugins="false">

	<domain size="16 16 16" />
	<particle_vector name="dpd" density="10" />
	
	<wall name="wall" file_name="../../walls/cyl.dat" source_pv="dpd" creation_time="0.05" mass="1.0" density="10" a="2.6666667" kbt="0.03" rc="1.0" power="0.25"/>
	
	<interaction name="dpd_int" type="dpd" a="2.6666667" gamma="8" kbt="0.0444302" dt="0.0005" rc="1.0" power="0.25">
		<apply_to pv1="dpd" pv2="dpd"/>
		<apply_to pv1="dpd" pv2="wall"/>
	</interaction>
	
	<integrator name="const_dp" type="const_dp" extra_force="0.033333333 0 0.0" dt="0.0005">
		<apply_to pv="dpd" />
	</integrator>
	
	<plugin name="avg" type="avg3D" sample_every="10" dump_every="5000" path="xdmf/avg_rho_u" h="0.5 0.5 0.5">
		<apply_to pv="dpd" />
	</plugin>
	
	<run dt="0.0005" stop_time="4.000" />

</simulation>
