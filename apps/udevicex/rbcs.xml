	<interaction type="dpd" name="fsi" a="0" gamma="10" kbt="0.5" dt="0.001" rc="1.0" power="0.5">
		<apply_to pv1="rbcs" pv2="dpd"/>
		<!-- <apply_to pv1="rbcs" pv2="ins"/> -->
	</interaction>
	
	<!--
		Integrators section
	-->
	
	<integrator type="vv_periodic_poiseuille" name="pois" force="0.5" dir="x" dt="0.001">
		<apply_to pv="dpd" />
		<apply_to pv="rbcs" />
<!-- 		<apply_to pv="ins" /> -->
	</integrator>

	
