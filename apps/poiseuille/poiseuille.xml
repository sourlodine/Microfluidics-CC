<?xml version="1.0"?>
<simulation name="poiseuille" debug_lvl="1">

	<domain size="64 64 64" />
	<particle_vector name="dpd" density="8" />
	<wall name="wall" sdffile="tube.sdf" source_pv="dpd" creation_step="1000" />
	
	<interaction name="dpd_int" type="dpd" a="25" gamma="45" kbt="0.5" dt="0.002" rc="1.0">
		<apply_to pv1="dpd" pv2="dpd"/>
		<apply_to pv1="dpd" pv2="wall"/>
	</interaction>
	
	<integrator name="const_dp" type="const_dp" extra_force="0 0 0" dt="0.002">
		<apply_to pv="dpd" />
	</integrator>
	
	<plugin name="avg" type="avg3D" sample_every="10" dump_every="5000" path="xdmf/avg_rho_u" h="0.5 0.5 0.5">
		<apply_to pv="dpd" />
	</plugin>
	
	<run dt="0.002" stop_time="1.01" />

</simulation>
